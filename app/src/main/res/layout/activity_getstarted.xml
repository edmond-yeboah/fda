<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".getstarted">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/dif"
            android:layout_width="280dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:keepScreenOn="false"
            android:transitionName="logo"
            app:srcCompat="@drawable/ic_another"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="252dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/welcome_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Welcome to \n Food &amp; Drug Authenticator"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Please give access your Camera so that we can scan and provide you what is the inside the code"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/getstarted"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/roundbtnbg"
            android:fontFamily="@font/poppins_regular"
            android:text="Lets get started..."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>